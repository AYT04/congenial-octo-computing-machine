{
  "manifest_version": 3,
  "name": "YouTube & Twitch Filter Blocker",
  "version": "1.1",
  "description": "A distraction-free YouTube experience using pure CSS injection.",
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://music.youtube.com/*",
        "*://www.twitch.tv/*"
      ],
      "css": ["filters.css", "twitch.css"],
      "run_at": "document_start"
    }
  ]
}